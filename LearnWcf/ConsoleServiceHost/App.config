<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>

  <system.serviceModel>
    <services>
      <service name="CommonWcfServiceLibrary.Service1" behaviorConfiguration="CmluServiceBehavior">
        <endpoint address="" binding="wsHttpBinding" contract="CommonWcfServiceLibrary.IService1" />
        <!--Enable the MEX endpoint-->
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
        <!--为service和mex增加基地址-->
        <host>
          <baseAddresses>
            <!--可以添加多个基地址-->
            <add baseAddress="http://localhost:19829/CmluService"/>
          </baseAddresses>
        </host>
      </service>
    </services>
  
    <behaviors>
      <serviceBehaviors>
        <behavior name="CmluServiceBehavior">
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>

  </system.serviceModel>

</configuration>