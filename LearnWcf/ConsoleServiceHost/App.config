<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>

  <system.serviceModel>
    
    <bindings>
      <wsHttpBinding>
        <binding name="WsHttpBindingConfig" closeTimeout="00:00:30" openTimeout="00:00:30" sendTimeout="00:00:40" >
          
        </binding>
      </wsHttpBinding>
    </bindings>
    
    <services>
      
      <!--
      name：指定Service类型，全限定名
      -->
      <service name="CommonWcfServiceLibrary.Service1" behaviorConfiguration="CmluServiceBehavior">
        <endpoint address="" binding="wsHttpBinding" bindingConfiguration="WsHttpBindingConfig" contract="CommonWcfServiceLibrary.IService1" />

        <!--为service增加基地址-->
        <host>
          <baseAddresses>
            <!--可以添加多个基地址-->
            <add baseAddress="http://localhost:19829/CmluService"/>
          </baseAddresses>
        </host>
      </service>
    </services>
  
    <behaviors>
      <serviceBehaviors>
        <behavior name="CmluServiceBehavior">
          <!--通过http来暴露元数据-->
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="false"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>

  </system.serviceModel>

</configuration>