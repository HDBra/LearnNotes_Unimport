<Window x:Class="WpfLearn.Windows.NonrectangularWindows_BackImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NonrectangularWindows_BackImage" Height="300" Width="300"
        WindowStyle="None" AllowsTransparency="True">
    <Window.Background>
        <ImageBrush ImageSource="../Images/Computer.png"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button >Click</Button>
        <Button Grid.Row="1" Margin="6" Click="ButtonBase_OnClick">Exit</Button>
    </Grid>
</Window>
