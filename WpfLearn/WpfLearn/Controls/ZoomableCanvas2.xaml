<Window x:Class="WpfLearn.Controls.ZoomableCanvas2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:WpfLearn.Models"
        Title="ZoomableCanvas2" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <models:CustomCanvas Background="Violet" x:Name="CustomCanvas" ></models:CustomCanvas>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="背景图" Click="Button01_OnClick"></Button>
            <Button Content="无背景" Click="Button02_OnClick"></Button>
        </StackPanel>
    </Grid>
</Window>
