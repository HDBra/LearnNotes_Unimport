<Window x:Class="WpfLearn.Controls.ListView3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:deletable="clr-namespace:WpfLearn.Deletable"
        Title="ListView3" Height="300" Width="300" Loaded="ListView3_OnLoaded">
    <Window.Resources>
        <GridView x:Key="GridViewRes">
            <GridView.Columns>
                <GridViewColumn Header="Name"  DisplayMemberBinding="{Binding Path=ModelName}"></GridViewColumn>
                
            </GridView.Columns>
        </GridView>
    </Window.Resources>
    
    
    <Grid>
        <ListView  Name="LstProducts">
            <ListView.View>
                <deletable:TileView />
            </ListView.View>
        </ListView>
    </Grid>
</Window>
